{
    "manifest_version": 2,

    "name": "桌面歌词",
    "description": "一款桌面歌词插件，支持咪咕音乐、QQ音乐和网易云音乐，需要另外启动桌面歌词软件",
    "version": "1.0",

    "permissions": [
        "https://music.migu.cn/",
        "https://music.163.com/",
        "https://y.qq.com/"
    ],
    "icons": {
        "16": "icon16.png",
        "48": "icon48.png",
        "128": "icon128.png"
    },
    "content_scripts": [{
        "matches": ["https://music.migu.cn/*", "https://music.163.com/*", "https://y.qq.com/*"],
        "js": ["hack.js"],
        "run_at": "document_end"
    }],
    "browser_action": {
        "default_title": "桌面歌词",
        "default_popup": "popup.html"
    }
}